@page "/"
@using MudBlazor
@using SweetShopBlazor.Shared;
<PageTitle>Sweet Shop</PageTitle>

<MudStack AlignItems="AlignItems.Center" Row="true" Justify="Justify.Center">
    <MudText Typo="Typo.h1">Welcome!</MudText>
</MudStack>
@* 
