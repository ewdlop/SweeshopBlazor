<div class="row" data-masonry='{percentPosition": true }'>
    @foreach(Sweet item in _sweets)
    {
        <div class="col-sm-6 col-lg-4 mb-4">
            <SweeshopBlazor.Client.Card ImageUrl="@($"{item.Name}.png")" Header="@item.Name" Body="@item.Description" Likes="item.Likes" Href="@($"BrowseSweet/{item.Id}")"></SweeshopBlazor.Client.Card .>
        </div>

    }
</div>



