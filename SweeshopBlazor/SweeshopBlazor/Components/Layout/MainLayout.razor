@using MudBlazor
@inherits LayoutComponentBase
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" @rendermode="RenderMode.InteractiveWebAssembly" />
        Sweet Shop
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.AddShoppingCart" Color="Color.Inherit" />
    </MudAppBar>
@*      <MudDrawer @bind-Open="@_drawerOpen">
        <SweeshopBlazor.Client.NavMenu/>
    </MudDrawer>  *@
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
